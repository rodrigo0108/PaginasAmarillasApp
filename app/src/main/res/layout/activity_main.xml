<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rramos.paginasamarillasapp.activities.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mis_p_ginas"
        android:textAlignment="center"
        android:background="@drawable/bg_border_top"
        android:padding="16dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:drawableEnd="@drawable/ic_help"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="60dp"
            android:id="@+id/get_empresa"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="45dp"
            android:drawableStart="@drawable/ic_search"
            android:onClick="buscarEmpresa"

            />
    </LinearLayout>

</LinearLayout>
